<Window x:Class="PhotoStudio.Windows.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudio.Windows"
        mc:Ignorable="d"
        Title="AddClientWindow" Height="450" Width="400">
    <Grid>
        <TextBlock Text="Новый клиент" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <StackPanel Margin="10 20 10 10">

            <TextBlock>Имя</TextBlock>
            <TextBox Text="{Binding FirstName}" />
            <TextBlock>Фамилия</TextBlock>
            <TextBox Text="{Binding LastName}" />
            <TextBlock>Номер телефона</TextBlock>
            <TextBox Text="{Binding PhoneNumber}" />
            <DockPanel Margin="0 10 0 0" LastChildFill="True" VerticalAlignment="Bottom">

                <UniformGrid Rows="2">

                    <Button IsDefault="True" Content="Сохранить" Height="30" Margin="0 0 0 5" Click="Accept_Click"/>
                    <Button IsCancel="True" Content="Отмена" Height="30"  Margin="0 5 0 0"/>
                </UniformGrid>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
